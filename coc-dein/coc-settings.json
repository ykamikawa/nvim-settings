{
  "hover.target": "float",
  "codeLens.enable": true,

  // suggest
  "suggest.detailField": "abbr",
  "suggest.detailMaxLength": 30,
  "suggest.maxCompleteItemCount": 50,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.echodocSupport": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\ue624",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // diagnostics
  "diagnostic.enable": true,
  "diagnostic.highlightOffset": 9999999,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": true,
  "diagnostic.messageTarget": "echo",
  //"diagnostic.errorSign": "✘",
  //"diagnostic.warningSign": "",
  //"diagnostic.infoSign": "",

  // explorer
  "explorer.width": 80,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "v": "open:vsplit"
  },
  "explorer.file.reveal.auto": true,

  // snippets
  "snippets.extends": {
    "scss": ["css"],
    "sass": ["css"],
    "less": ["css"],
    "xml": ["xml"],
    "vim": ["vim"],
    "snippets": ["snippets"],
    "javascriptreact": ["javascript", "javascriptreact"],
    "typescript": ["javascript", "typescriptreact"]
  },

  // preferences
  "coc.preferences.snippetStatusText": "SNIPPET",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "css",
    "yaml",
    "md",
    "markdown"
  ],

  // html
  "html.autoClosingTags": true,
  "html.suggest.ionic": true,

  // pyright
  "pyright.enable": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.useLibraryCodeForTypes": false,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--diff", "--quiet", "--fast"],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.sortImports.path": "isort",
  "pyright.organizeimports.provider": "isort",

  // eslint
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // tsserver
  "tsserver.enableJavascript": false,

  // prettier
  "prettier.disableSuccessMessage": true
}
